<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.impl">

    <!--查询全部学生信息-->
    <select id="selectAll" resultType="pojo.Student">
        select id,name,email,age from student
    </select>

    <!--查询指定ID的学生信息-->
    <select id="getById" parameterType="int" resultType="pojo.Student">
        select id,name,email,age from student where id =#{id}
    </select>

    <!--按姓名模糊查询-->
    <select id="getName" parameterType="string" resultType="pojo.Student">
        select id,name,email,age from student where name like '%${value}%'
    </select>

    <!--增加学生信息-->
    <select id="insertStudent" parameterType="pojo.Student">
        insert into student(name,email,age) values (#{name},#{email},#{age})
    </select>

    <!--删除指定id的学生-->
    <select id="deleteStudent" parameterType="int">
        delete from student where id =#{id}
    </select>
    <!--修改学生信息-->
    <select id="updateStudent" parameterType="pojo.Student">
        update student set id=#{id},name=#{name},email=#{email},age=#{age};
    </select>
    
</mapper>