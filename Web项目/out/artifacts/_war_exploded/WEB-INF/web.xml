        <servlet-name>EmpDeleteServlet</servlet-name>
        <url-pattern>/emp/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmpFindServlet</servlet-name>
        <url-pattern>/emp/find</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmpAddServlet</servlet-name>
        <url-pattern>/emp/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeptUpdateServlet</servlet-name>
        <url-pattern>/dept/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeptFindByIdServlet</servlet-name>
        <url-pattern>/dept/findById</url-pattern>
    </servlet-mapping>
