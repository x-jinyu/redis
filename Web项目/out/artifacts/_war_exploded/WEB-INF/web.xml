    <servlet>
        <servlet-name>EmpAddServlet</servlet-name>
        <servlet-class>controller.EmpAddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmpFindServlet</servlet-name>
        <servlet-class>controller.EmpFindServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmpDeleteServlet</servlet-name>
        <servlet-class>controller.EmpDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmpFindByIdServlet</servlet-name>
        <servlet-class>controller.EmpFindByIdServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmpDeleteBatchServlet</servlet-name>
        <servlet-class>controller.EmpDeleteBatchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmpUpdateServlet</servlet-name>
        <servlet-class>controller.EmpUpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmpUpdateServlet</servlet-name>
        <url-pattern>/emp/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmpDeleteBatchServlet</servlet-name>
        <url-pattern>/emp/deleteBatch</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmpFindByIdServlet</servlet-name>
        <url-pattern>/emp/findById</url-pattern>
    </servlet-mapping>
