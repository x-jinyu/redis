    <servlet>
        <servlet-name>DeptDeleteServlet</servlet-name>
        <servlet-class>controller.DeptDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeptFindByIdServlet</servlet-name>
        <servlet-class>controller.DeptFindByIdServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeptUpdateServlet</servlet-name>
